<div class="row">
  	<div class="col-md-7">
		<div class="well visit">
			<h4><%=visit.user.username%>'s visit</h4>
			<p><strong>Date: </strong><%=visit.date%></p>
			<p>
				<input type='hidden' id='visit_rating' value='<%=visit.rating%>'>
				<div>
			      <span id="rate_0" data-score="1">☆</span>
			      <span id="rate_1" data-score="2">☆</span>
			      <span id="rate_2" data-score="3">☆</span>
			      <span id="rate_3" data-score="4">☆</span>
			      <span id="rate_4" data-score="5">☆</span>
			    </div>
			</p>
			<p><strong>Comment: </strong><%=visit.comment%></p>
		</div>
  	</div>
	<div class="col-md-5">
		<% if !visit.photos.empty? %>
		    <div id="myCarousel" class="carousel slide" data-interval="3000" data-ride="carousel">
		    	<!-- Carousel indicators -->
		        <ol class="carousel-indicators">

		        	<% visit.photos.each_with_index do |p, i| %>
						<% if i == 0 %>
						<li data-target="#myCarousel" data-slide-to="<%=i%>" class="active"></li>
						<% else %>
						<li data-target="#myCarousel" data-slide-to="<%=i%>"></li>
						<% end %>
					<% end %>
		        </ol>   
		       <!-- Carousel items -->
		        <div class="carousel-inner">
		        	<% visit.photos.each_with_index do |p, i| %>
						<% if i == 0 %>
						<div class="active item">
						<% else %>
						<div class="item">
						<% end %>
							<%= image_tag p.picture_url , height: '130px', style:"max-width: 100%; max-height: 100%; margin: 0 auto;" %>
			            </div>
					<% end %>
		        </div>
		        <!-- Carousel nav -->
		        <a class="carousel-control left" href="#myCarousel" data-slide="prev">
		            <span class="glyphicon glyphicon-chevron-left"></span>
		        </a>
		        <a class="carousel-control right" href="#myCarousel" data-slide="next">
		            <span class="glyphicon glyphicon-chevron-right"></span>
		        </a>
		    </div>
		<% end %>
	</div>
</div>

<script type="text/javascript">

$(document).ready(function(){
     $("#myCarousel").carousel();
});

  if ($('#visit_rating').val() > 0){
    for (var i =0; i< $('#visit_rating').val(); i++){
      $('#rate_'+i).addClass('on');
    }
  }

</script>