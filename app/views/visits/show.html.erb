<h1>Visit</h1>

<%= render partial: "places/place", object: @place, as: 'place' %>

<%= render partial: "visit", object: @visit, as: 'visit' %>

<% if current_user.id == @visit.user.id %>
	<%= link_to ' Edit', edit_place_visit_path(@place, @visit) , class:"btn btn-default glyphicon glyphicon-pencil"%>
	<%= link_to " Recommend", new_visit_recommendation_path(@visit), class:"btn btn-default glyphicon glyphicon-share"%>
<% end %>
<%= link_to 'Back', user_visits_path(@visit.user) , class:"btn btn-default"%>

<script type="text/javascript">
google.maps.event.addDomListener(window, 'load', initialize);
</script>

