
<div class="row">
	<h1>All past visits of <%=@user.username%></h1>

	<div class="col-md-8">
		<div class="row">
		<% @visits.each do |visit|%>
			  <div class="col-sm-6 col-md-4">
			    <div class="thumbnail">
			    	
			    	<% if !visit.photos.empty? %>
			    		<%= image_tag(visit.photos.first.picture_url) %>
			    	<% elsif visit.place.picture.present? %>
			    		<%= image_tag(visit.place.picture_url) %>
			    	<% end %>
			      <div class="caption">
			        <h3><%=visit.place.name%></h3>
			        <p><%=visit.date%></p>
			        <p><%=visit.rating%></p>
			        <p><%=visit.comment%></p>
			        <p>
			        	<%= link_to "", place_visit_path(visit.place, visit), class:"btn btn-default glyphicon glyphicon-eye-open"%>
			        	<%= link_to "", edit_place_visit_path(visit.place, visit), class:"btn btn-default glyphicon glyphicon-pencil"%>
						<%= link_to '', place_visit_path(visit.place, visit),
					                    method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-default glyphicon glyphicon-trash"%>
					    <%= link_to "", new_visit_recommendation_path(visit), class:"btn btn-default glyphicon glyphicon-share"%>
			        </p>
			      </div>
			    </div>
			  </div>

		<% end %>
		</div>
	</div>

	<div class="col-md-4">
		<input type='hidden' id="user_id" value="<%=@user.id%>">
	  	<div id="map-canvas" data-map="disable"></div>
	</div>
</div>

	<script type="text/javascript">
	google.maps.event.addDomListener(window, 'load', initializeVisitsMap);
	</script>
