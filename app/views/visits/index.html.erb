<h1>All past visits of <%=@user.username%></h1>

<div style="display:inline;float:left;">
	<% @visits.each do |visit|%>

		<p>
			<%=visit.place.id%> | <%=visit.place.name%> | <%= image_tag(visit.place.picture_url, :width => 300) if visit.place.picture.present? %> | <%=visit.id%> | <%=visit.date%> | <%=visit.rating%> | <%=visit.comment%> |		

			<% visit.photos.each do |p| %>
				<%= image_tag(p.picture_url, :width => 300)%>
			<% end %>
 
			<%= link_to "Add Photo", addphoto_path(visit) %>
			<%= link_to "Edit", edit_place_visit_path(visit.place, visit)%>
			<%= link_to 'Delete', place_visit_path(visit.place, visit),
		                    method: :delete, data: { confirm: 'Are you sure?' }%>
		    <%= link_to "Recommend", new_visit_recommendation_path(visit)%>
		</p>
	<% end %>
</div>
<input type='hidden' id="user_id" value="<%=@user.id%>">
<div style="display:inline;float:left;">
  <div id="map-canvas" data-map="disable"></div>
</div>
<script type="text/javascript">
google.maps.event.addDomListener(window, 'load', initializeVisitsMap);
</script>