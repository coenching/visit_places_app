<% if @visit.errors.any? %>
  <% @visit.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end %>
<% end %>

<%= form_for [@place, @visit] do |f| %>
  <div>
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>
  <div>
    <%= f.label :rating %>
    <%= f.text_field :rating %>
  </div>
  <div>
    <%= f.label :comment %>
    <%= f.text_area :comment %>
  </div>
  <div >
      <%= f.submit %>
      <%= link_to 'Back', visits_all_path %>
  </div>
<% end %>