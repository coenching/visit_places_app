<h1>Add friend</h1>

<%= form_tag users_path, method: :GET do %>
    <div >
    <%= text_field_tag :search, nil, class: "form-control" %>
    </div>
    <%= submit_tag "Search", class: "btn btn-primary"%>
<% end %>

<ul>
<% @users.each do |user|%>
	<li><%=user.username%> <%= link_to "Add Friend", friendships_path(:friend_id => user.id), :method => :post %></li>
<% end %>
</ul>