<h1><%=@recommendation.visit.user.username%> recommended a place to <%=@recommendation.user.username%></h1>

<div class="row">

  	<div class="col-md-8">
  		<div class="well">
	        <h2>"<%=@recommendation.comment%>"</h2>
	        <p>-- <%=@recommendation.visit.user.username%></p>
	    </div>
		<%= render partial: "places/place", object: @recommendation.visit.place, as: 'place' %>
		<%= render partial: "visits/visit", object: @recommendation.visit, as: 'visit' %>

		<%=link_to 'Back', user_recommendations_path(@recommendation.user), class:"btn btn-primary" %>
	</div>

  <div class="col-md-4">
    <div id="map-canvas" data-map="disable"></div>
  </div>
  
</div>

<script type="text/javascript">
google.maps.event.addDomListener(window, 'load', initialize);
</script>

