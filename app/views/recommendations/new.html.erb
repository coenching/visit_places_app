<h1>New recommendations</h1>

<% if @recommendation %>
    <%= render partial: "shared/form_error_list", locals: { model: @recommendation } %>
<% end %>

<%= render partial: "places/place", object: @visit.place, as: 'place' %>
<%= render partial: "visits/visit", object: @visit, as: 'visit' %>

<div class="row">
    <div class="col-md-12">
      <div class="border_box">
      <%= form_for [@visit, @recommendation] do |f| %>
        <div class="form-group">
            <%= f.label :user_id, "Recommendation to send to" %>
            <%= f.collection_select :user_id, current_user.get_friends, :id, :username , class: "form-control"%>
          </div>
          <div class="form-group">
            <%= f.label :comment %>
            <%= f.text_area :comment , class: "form-control"%>
          </div>
          <div class="form-group">
            <%= f.submit class:"btn btn-default"%>
            <%= link_to 'Cancel', user_visits_path(current_user), class:"btn btn-default" %>
          </div>
      <% end %>
    </div>
    </div>
</div>
